{
  "name": "11ty-email-generator",
  "version": "1.0.0",
  "description": "Use 11ty to generate html emails",
  "main": "index.html",
  "scripts": {
    "watch:sass": "sass  --no-source-map --watch src/sass:dist/css",
    "watch:eleventy": "ELEVENTY_ENV=dev npx @11ty/eleventy --serve",
    "build:sass": "sass  --no-source-map src/sass:dist/css",
    "build:eleventy": "ELEVENTY_ENV=prod npx @11ty/eleventy --pathprefix=lcc11-emails",
    "postbuild": "lightningcss --targets '> 0.25%, not IE 11' dist/css/*.css -o dist/css/*.css",
    "prefix": "postcss dist/css/*.css -u autoprefixer -r",
    "start": "NODE_ENV=dev npm-run-all build:sass --parallel watch:*",
    "build": "NODE_ENV=production npm-run-all build:sass prefix build:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5t3ph/11ty-email-generator.git"
  },
  "author": "5t3ph",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "juice": "^8.1.0",
    "lightningcss-cli": "^1.17.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.57.1"
  },
  "browserslist": [
    "> 0.25%",
    "not IE 11"
  ]
}
