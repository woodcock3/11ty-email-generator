{
  "name": "11ty-email-generator",
  "version": "1.0.0",
  "description": "Use 11ty to generate html emails",
  "main": "index.html",
  "scripts": {
    "watch:sass": "sass  --no-source-map --watch src/sass:dist/css",
    "watch:eleventy": "ELEVENTY_ENV=dev npx @11ty/eleventy --serve",
    "build:sass": "sass  --no-source-map src/sass:dist/css",
    "build:eleventy": "ELEVENTY_ENV=prod npx @11ty/eleventy --pathprefix=emails11",
    "prefix": "lightningcss --targets '> 0.25%, not IE 11' dist/css/*.css -o dist/css/*.css",
    "start": "NODE_ENV=dev npm run build:sass && concurrently 'watch:*'",
    "build": "NODE_ENV=production npm run build:sass && npm run prefix && npm run build:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5t3ph/11ty-email-generator.git"
  },
  "author": "5t3ph",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.25",
    "juice": "^8.1.0",
    "lightningcss-cli": "^1.17.1",
    "concurrently": "^7.6.0",
    "sass": "^1.57.1"
  },
  "browserslist": [
    "> 0.25%",
    "not IE 11"
  ]
}
