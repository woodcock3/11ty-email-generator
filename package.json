{
  "name": "11ty-email-generator",
  "version": "1.0.0",
  "description": "Use 11ty to generate html emails",
  "main": "index.html",
  "scripts": {
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch:eleventy": "ELEVENTY_ENV=dev npx @11ty/eleventy --serve",
    "build:sass": "sass  --no-source-map src/sass:public/css",
    "build:eleventy": "ELEVENTY_ENV=prod npx @11ty/eleventy --pathprefix=11ty-email-generator",
    "prefix": "postcss public/css/*.css -u autoprefixer -r",
    "start": "cross-env NODE_ENV=dev npm-run-all build:sass --parallel watch:*",
    "build": "cross-env NODE_ENV=production npm-run-all build:sass prefix build:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5t3ph/11ty-email-generator.git"
  },
  "author": "5t3ph",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "autoprefixer": "^10.2.3",
    "cross-env": "^7.0.3",
    "juice": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0",
    "sass": "^1.53.0"
  },
  "browserslist": [
    "> 0.5%",
    "not IE 11"
  ]
}
